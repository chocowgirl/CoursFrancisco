{% extends 'base.html.twig' %}

{% block title %}Hello RunManagerController!{% endblock %}

{% block body %}
run manager



<style>
.container {  display: flex;  flex-wrap: wrap;  background-color: #f0f0f0;  border-radius: 15px;  padding: 10px;  width: 400px;  gap: 10px;  font-family: Arial, sans-serif;}.item {  background-color: #cccccc;  border-radius: 10px;  padding: 10px;  text-align: center;  flex: 1;  min-width: 80px;}.item-large {  flex: 2;  background: linear-gradient(90deg, orange, red);  color: white;  border-radius: 10px;  padding: 10px;  display: flex;  align-items: center;  justify-content: center;}.notes {  background-color: #a0a0a0;  border-radius: 10px;  padding: 10px;  text-align: left;  flex: 1;  min-width: 350px;}.edit-button {  background-color: #e53935;  color: white;  font-weight: bold;  border: none;  padding: 10px;  border-radius: 10px;  cursor: pointer;  display: flex;  align-items: center;  justify-content: center;}.edit-button img {  width: 16px;  height: 16px;  margin-right: 5px;} </style>

{% for activity in activities %}

<div class="container">
  <div class="item"> {{ activity.activityDate.format("Y/m/d") }} </div>
  <div class="item"> {{ activity.activityDistanceKm }} </div>
  <div class="item"> {{ activity.activityChronoMin }} </div>
  {# {{ dump (activity.shoepairUsed)}} #}
  {{ dump (activity.activityDate)}}
  <div class="item-large"> {{ activity.shoepairUsed.nameBrandModel }} </div>
  <div class="edit-button">
    {# <a href="{{ path('update_activity', {id: activity.id} )}}"><img src="edit-icon.png" alt="edit-icon" />edit</a> #}
  </div>
  <div class="notes"> {{activity.activityNote }} </div>
</div>
    
{% endfor %}

{% endblock %}
