{% extends 'base.html.twig' %}

{% block title %}Hello ShoeManagerController!{% endblock %}

{% block body %}
Shoe manager

<style>
		
	.shoelegend {
		display: flex;
		padding:10px
		width:400px;
		font-family: Arial, sans-serif;
		margin:10px
	}

	.shoelegendItem {
		text-align:center;
		color:white;
		padding:3px;
		border-radius:10px;
		min-width: 80px;
		background-color: #e53935;
		margin:10px;
	}
	
	.container {
		display: flex;
		flex-wrap: wrap;
		background-color: #f0f0f0;
		border-radius: 15px;
		border-color: gray;
		border-style: solid;
		border-width: 1px;
		padding: 10px;
		width: 400px;
		gap: 10px;
		font-family: Arial, sans-serif;
		margin:10px;
	}
	.item {
		background-color: #a0a0a0;
		border-radius: 10px;
		padding: 10px;
		text-align: center;
		flex: 1;
		min-width: 80px;
		color:white;
	}
	.item-large {
		flex: 2;
		background: linear-gradient(90deg, orange, red);
		color: white;
		border-radius: 10px;
		padding: 10px;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.notes {
		background-color: #a0a0a0;
		border-radius: 10px;
		padding: 10px;
		text-align: left;
		flex: 1;
		min-width: 300px;
		color:white;
	}
	.edit-button {
		background-color: #e53935;
		color: white;
		font-weight: bold;
		border: none;
		padding: 10px;
		border-radius: 10px;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.edit-button img {
		width: 16px;
		height: 16px;
		margin-right: 5px;
	}

	button {
		background-color: red;
		color: white;
	}

	.homebtn {
		background-color:#a0a0a0;
		width : 30px;
		height : 30px;
		border-radius: 15px;
		text-align:center;
		border-color: dark-gray;
		border-style: solid;
		border-width: 1px;
	}
</style>
	<div class="homebtn">
		<a href="{{ path('app_welcome')}}">üè†</a>
	<div>

	<div class="shoelegend">
		<div class="shoelegendItem">Shoe</div>
		<div class="shoelegendItem">Km used</div>
		<div class="shoelegendItem">Status</div>
		<div class="shoelegendItem">Edit</div>
	</div>
	
	{% for shoe in shoes %}

		<div class="container">
			<div class="item-large">
				{{ shoe.nameBrandModel}}
			</div>
			<div class="item">
				{{ shoe.currentWearKm }}
			</div>
			<div class="item">
				{{ shoe.inActiveService }}
			</div>
			{# {{ dump (activity.shoepairUsed)}} #}
			{# {{ dump (activity.activityDate)}} #}
			<div class="edit-button">
				{# <button>edit</button> #}
				<a href="{{ path('update_shoe', {id: shoe.id} )}}">edit</a>
			</div>
			<div class="notes">
				{{shoe.shoeNote }}
			</div>
		</div>

	{% endfor %}


{% endblock %}
