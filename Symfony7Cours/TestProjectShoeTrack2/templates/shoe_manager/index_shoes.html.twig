{% extends 'base.html.twig' %}

{% block title %}Hello ShoeManagerController!{% endblock %}

{% block body %}
Shoe manager

<style>
		.container {
			display: flex;
			flex-wrap: wrap;
			background-color: #f0f0f0;
			border-radius: 15px;
			padding: 10px;
			width: 400px;
			gap: 10px;
			font-family: Arial, sans-serif;
		}
		.item {
			background-color: #cccccc;
			border-radius: 10px;
			padding: 10px;
			text-align: center;
			flex: 1;
			min-width: 80px;
		}
		.item-large {
			flex: 2;
			background: linear-gradient(90deg, orange, red);
			color: white;
			border-radius: 10px;
			padding: 10px;
			display: flex;
			align-items: center;
			justify-content: center;
		}
		.notes {
			background-color: #a0a0a0;
			border-radius: 10px;
			padding: 10px;
			text-align: left;
			flex: 1;
			min-width: 350px;
		}
		.edit-button {
			background-color: #e53935;
			color: white;
			font-weight: bold;
			border: none;
			padding: 10px;
			border-radius: 10px;
			cursor: pointer;
			display: flex;
			align-items: center;
			justify-content: center;
		}
		.edit-button img {
			width: 16px;
			height: 16px;
			margin-right: 5px;
		}

        button {
            background-color: red;
            color: white;
        }
</style>

	{% for shoe in shoes %}

		<div class="container">
			<div class="item-large">
				{{ shoe.nameBrandModel}}
			</div>
			<div class="item">
				{{ shoe.currentWearKm }}
			</div>
			<div class="item">
				{{ shoe.inActiveService }}
			</div>
			{# {{ dump (activity.shoepairUsed)}} #}
			{# {{ dump (activity.activityDate)}} #}
			<div class="edit-button">
				<button>edit</button>
				{# <a href="{{ path('update_shoe', {id: activity.id} )}}"><img src="edit-icon.png" alt="edit-icon" />edit</a> #}
			</div>
			<div class="notes">
				{{shoe.shoeNote }}
			</div>
		</div>

	{% endfor %}


{% endblock %}
